{
  "name": "twenty-eslint-rules",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/twenty-eslint-rules",
  "tags": ["scope:shared"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "npx esbuild {projectRoot}/oxlint-plugin.ts --bundle --format=esm --platform=node --outfile={projectRoot}/dist/oxlint-plugin.mjs --external:typescript --alias:@typescript-eslint/utils=./{projectRoot}/oxlint-shims"
      }
    },
    "lint": {
      "options": {
        "eslintConfig": "{workspaceRoot}/eslint.config.mjs",
        "lintFilePatterns": ["{projectRoot}/**/*.ts"]
      },
      "configurations": {
        "fix": {}
      }
    },
    "typecheck": {},
    "test": {}
  }
}
