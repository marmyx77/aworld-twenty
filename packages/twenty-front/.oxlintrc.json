{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["react", "typescript", "unicorn", "import"],
  "categories": {
    "correctness": "off"
  },
  "jsPlugins": ["../twenty-eslint-rules/dist/oxlint-plugin.mjs"],
  "rules": {
    "func-style": ["error", "declaration", { "allowArrowFunctions": true }],
    "no-console": ["warn", { "allow": ["group", "groupCollapsed", "groupEnd"] }],
    "no-control-regex": "off",
    "no-debugger": "error",
    "no-duplicate-imports": "error",
    "no-undef": "off",
    "no-unused-vars": "off",
    "no-redeclare": "off",
    "no-restricted-imports": ["error", {
      "patterns": [
        {
          "group": ["../*"],
          "message": "Relative parent imports are not allowed. Use @/ alias instead."
        },
        {
          "group": ["@tabler/icons-react"],
          "message": "Please import icons from `twenty-ui`"
        },
        {
          "group": ["react-hotkeys-web-hook"],
          "importNames": ["useHotkeys"],
          "message": "Please use the custom wrapper: `useScopedHotkeys` from `twenty-ui`"
        },
        {
          "group": ["lodash"],
          "message": "Please use the standalone lodash package (for instance: `import groupBy from 'lodash.groupby'` instead of `import { groupBy } from 'lodash'`)"
        }
      ]
    }],

    "import/no-duplicates": "error",

    "react/no-unescaped-entities": "off",
    "react/prop-types": "off",
    "react/jsx-key": "off",
    "react/display-name": "off",
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-no-useless-fragment": "off",
    "react/jsx-props-no-spreading": ["error", { "explicitSpread": "ignore" }],

    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": ["warn", { "additionalHooks": "useRecoilCallback" }],

    "typescript/no-redeclare": "error",
    "typescript/ban-ts-comment": "error",
    "typescript/consistent-type-imports": ["error", {
      "prefer": "type-imports",
      "fixStyle": "inline-type-imports"
    }],
    "typescript/explicit-function-return-type": "off",
    "typescript/explicit-module-boundary-types": "off",
    "typescript/no-empty-object-type": ["error", {
      "allowInterfaces": "with-single-extends"
    }],
    "typescript/no-empty-function": "off",
    "typescript/no-explicit-any": "off",
    "typescript/no-unused-vars": "off",

    "twenty/effect-components": "error",
    "twenty/no-hardcoded-colors": "error",
    "twenty/matching-state-variable": "error",
    "twenty/styled-components-prefixed-with-styled": "error",
    "twenty/no-state-useref": "error",
    "twenty/component-props-naming": "error",
    "twenty/use-getLoadable-and-getValue-to-get-atoms": "error",
    "twenty/useRecoilCallback-has-dependency-array": "error",
    "twenty/no-navigate-prefer-link": "error",

    "twenty/no-unlocalized-strings": ["error", {
      "ignore": [
        "^(?![A-Z])\\S+$",
        "^[A-Z0-9_-]+$",
        "^[\\s]*$",
        ".*[{}/<>].*",
        "^\\d+(\\.\\d+)?(px|rem|em|%|vh|vw|s|ms)?$",
        "^[\\d.]+(px|rem|em|%|vh|vw|fr|s|ms)?(\\s+[\\d.]+(px|rem|em|%|vh|vw|fr|s|ms)?)*$",
        "^#[0-9a-fA-F]{3,8}$",
        "^rgba?\\(.*\\)$",
        "^(auto|none|inherit|initial|unset|flex|grid|block|inline|inline-block|relative|absolute|fixed|sticky)$",
        "^color:.*$",
        "^font-.*$",
        "^\\d+$",
        "^https?:\\/\\/.*",
        "^@.*",
        "^\\/.*",
        "^[HhMmSsYyDdAaPp:.,\\s-]+$",
        "^Arrow(Up|Down|Left|Right)$",
        "^(Enter|Escape|Tab|Space|Backspace|Delete)$",
        "^Text$",
        "^(allow-|sandbox)",
        "^Id$",
        "^(string|number|boolean|void|any|unknown|never|object)$",
        "^(Dark|Light)$",
        "^translate\\(.*\\)$",
        "^svg .*$",
        "^Icon[A-Z]\\w*$",
        "^\\w*Icon$",
        "^%c.*$",
        "^(Group|CalendarView|CalendarDateField|Compact view)$",
        "^(Layout|Visibility|Fields|Delete view|Copy link to view|Create custom view)$",
        "^(GroupBy|Sort|HideEmptyGroups|HiddenGroups)$",
        "^Authorization$",
        "^Bearer .*",
        "^(topLeft|topRight|bottomLeft|bottomRight)$",
        "^System$",
        "^\\(prefers-color-scheme:",
        "^Get[A-Z]\\w*$",
        ".*Context$",
        "^M[0-9 LML]+$",
        "^[ML][0-9 ]+$",
        "^(Asc|Desc)Nulls(First|Last)$",
        "^(Yes|No|Maybe)$",
        "^Invalid email(s)?:",
        ".*FilterInput$",
        ".*OrderByInput.*",
        "^\\$filter.*",
        "^\\$orderBy.*",
        "^\\$after.*",
        "^\\$before.*",
        "^\\$first.*",
        "^\\$last.*",
        "^Twenty(-\\w+)?$",
        "^twenty_session_id$",
        "^; domain=",
        "^[A-Z][a-zA-Z]+$",
        "^%\"type\":",
        "^%\"objectNameSingular\":"
      ],
      "ignoreNames": [
        { "regex": { "pattern": "className", "flags": "i" } },
        { "regex": { "pattern": "styleName", "flags": "i" } },
        { "regex": { "pattern": "testId", "flags": "i" } },
        "data-testid",
        "dataTestId",
        "src",
        "srcSet",
        "href",
        "target",
        "rel",
        "type",
        "id",
        "key",
        "name",
        "htmlFor",
        "width",
        "height",
        "fill",
        "stroke",
        "viewBox",
        "clipPath",
        "d",
        "transform",
        "displayName",
        "defaultValue",
        "to",
        "path",
        "pathname",
        "hash",
        "componentInstanceId",
        "hotkeyScope",
        "dropdownId",
        "recoilScopeId",
        "modalId",
        "dialogId",
        "itemId",
        "selectableItemIdArray",
        "listenerId",
        "focusId",
        "color",
        "variant",
        "size",
        "position",
        "align",
        "justify",
        "direction",
        "orientation",
        "status",
        "state",
        "mode",
        "accent",
        "gridAutoColumns",
        "gridAutoRows",
        "gridTemplateColumns",
        "gridTemplateRows",
        "gridColumn",
        "gridRow",
        "gap",
        "margin",
        "padding",
        "border",
        "borderRadius",
        "boxShadow",
        "flex",
        "flexDirection",
        "flexWrap",
        "justifyContent",
        "alignItems",
        "alignContent",
        "overflow",
        "display",
        "cursor",
        "zIndex",
        "opacity",
        "fontWeight",
        "fontSize",
        "lineHeight",
        "textAlign",
        "textDecoration",
        "whiteSpace",
        "wordBreak",
        "objectFit",
        "backgroundSize",
        "backgroundPosition",
        "minWidth",
        "maxWidth",
        "minHeight",
        "maxHeight",
        "mobileGridAutoColumns",
        "tabletGridAutoColumns",
        "css",
        "theme",
        "animation",
        "transition",
        "query",
        "mutation",
        "subscription",
        "fragment",
        "operationName",
        "variables",
        "__typename",
        "fieldName",
        "columnName",
        "objectNameSingular",
        "objectNamePlural",
        "metadataId",
        "nameSingular",
        "namePlural",
        "eventName",
        "event",
        "action",
        "actionType",
        "iconName",
        { "regex": { "pattern": "^Icon[A-Z]" } },
        { "regex": { "pattern": "^[A-Z][A-Z0-9_]*$" } },
        "orderBy",
        { "regex": { "pattern": "^(Asc|Desc)(NullsFirst|NullsLast)?$" } },
        "Authorization"
      ],
      "ignoreFunctions": [
        "console.*",
        "*.log",
        "*.warn",
        "*.error",
        "*.debug",
        "*.info",
        "*.trace",
        "logDebug",
        "formatTitle",
        "Error",
        "TypeError",
        "RangeError",
        "SyntaxError",
        "throw",
        "assertUnreachable",
        "CustomError",
        "parseInitialBlocknote",
        "describe",
        "it",
        "test",
        "expect",
        "jest.*",
        "*.toBe",
        "*.toEqual",
        "*.toContain",
        "*.toMatch",
        "*.toThrow",
        "require",
        "import",
        "styled",
        "styled.*",
        "css",
        "keyframes",
        "createGlobalStyle",
        "useNavigate",
        "navigate",
        "useLocation",
        "useParams",
        "format",
        "formatDate",
        "formatDateTime",
        "formatTime",
        "parseISO",
        "parse",
        "useNavigationSection",
        "atom",
        "atomFamily",
        "selector",
        "selectorFamily",
        "useSetRecoilState",
        "useRecoilState",
        "useRecoilValue",
        "gql",
        "useQuery",
        "useMutation",
        "useLazyQuery",
        "useSubscription",
        "*.includes",
        "*.indexOf",
        "*.startsWith",
        "*.endsWith",
        "*.split",
        "*.join",
        "*.match",
        "*.replace",
        "*.test",
        "Object.keys",
        "Object.values",
        "Object.entries",
        "Array.isArray",
        "*.getElementById",
        "*.getElementsByClassName",
        "*.querySelector",
        "*.querySelectorAll",
        "*.getAttribute",
        "*.setAttribute",
        "*.addEventListener",
        "*.removeEventListener",
        "*.dispatchEvent",
        "*.createElement",
        "localStorage.*",
        "sessionStorage.*",
        "searchParams.*",
        "*.get",
        "*.set",
        "*.has",
        "*.delete",
        "cva",
        "cn",
        "clsx",
        "classNames",
        "track",
        "*.postMessage",
        "*.dispatch",
        "*.commit",
        "onChange",
        "onClick",
        "onSelect",
        "onSubmit",
        "onFocus",
        "onBlur",
        "onKeyDown",
        "onKeyUp",
        "onMouseEnter",
        "onMouseLeave",
        "logError",
        "logDebug",
        "logInfo",
        "logWarn",
        "loggerLink",
        "createRequiredContext",
        "refetchQueries"
      ]
    }]
  },
  "overrides": [
    {
      "files": [
        "**/*.test.{ts,tsx,js,jsx}",
        "**/*.spec.{ts,tsx,js,jsx}",
        "**/__tests__/**/*.{ts,tsx}",
        "**/__mocks__/**/*.{ts,tsx}",
        "**/*.stories.{ts,tsx,js,jsx}",
        "**/__stories__/**/*"
      ],
      "rules": {
        "typescript/no-non-null-assertion": "off",
        "twenty/no-unlocalized-strings": "off"
      }
    },
    {
      "files": [
        "**/constants/**/*.ts",
        "**/*.constants.ts"
      ],
      "rules": {
        "unicorn/filename-case": ["warn", { "cases": { "pascalCase": true } }],
        "twenty/max-consts-per-file": ["error", { "max": 1 }],
        "twenty/no-unlocalized-strings": "off"
      }
    },
    {
      "files": [
        "**/Debug*.tsx",
        "**/*Debug*.tsx",
        "**/*DebugDisplay*.tsx",
        "**/*DebugHelper*.tsx",
        "**/*DebugObserver*.tsx",
        "**/testing/**/*.{ts,tsx}",
        "**/*mock*.ts",
        "**/*Mock*.ts",
        "**/perf/**/*",
        "**/validation-schemas/**/*.ts",
        "**/*Schema.ts",
        "**/*-schema.ts",
        "**/layouts/**/*.ts",
        "**/services/**/*.ts",
        "**/states/**/*.ts",
        "**/utils/**/*.ts",
        "**/*Utils.ts",
        "**/*-utils.ts",
        "**/*Util.ts",
        "**/*-util.ts",
        "**/errors/**/*.ts",
        "**/*Error.ts",
        "**/*-error.ts",
        "**/*.config.ts",
        "**/*.config.js",
        "**/vite.config.ts",
        "**/.storybook/**/*"
      ],
      "rules": {
        "twenty/no-unlocalized-strings": "off"
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/**",
    "mockServiceWorker.js",
    "generated*/**",
    "build/**",
    "coverage/**",
    "storybook-static/**",
    "*config.js",
    "__mocks__/**",
    "src/testing/mock-data/**"
  ]
}
